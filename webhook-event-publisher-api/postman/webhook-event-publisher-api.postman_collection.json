{
  "info": {
    "name": "Webhook Event Publisher API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Sample Postman collection for exercising the Webhook Event Publisher API endpoints"
  },
  "item": [
    {
      "name": "Publish Transaction Created Event",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Producer-Domain",
            "value": "payments"
          },
          {
            "key": "X-Event-Version",
            "value": "1.0"
          },
          {
            "key": "X-Event-Id",
            "value": "evt-{{$randomUUID}}"
          },
          {
            "key": "Idempotency-Key",
            "value": "idem-{{$randomUUID}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/events/transactionCreated",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "events",
            "transactionCreated"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"eventHeader\": {\n    \"eventId\": \"evt-123\",\n    \"eventName\": \"transactionCreated\",\n    \"producerDomain\": \"payments\",\n    \"version\": \"1.0\",\n    \"timestamp\": \"2025-01-01T10:00:00Z\"\n  },\n  \"eventPayload\": {\n    \"transactionId\": \"txn-999\",\n    \"customerId\": \"cust-001\",\n    \"amount\": 150.75,\n    \"currency\": \"USD\",\n    \"status\": \"SUCCESS\",\n    \"metadata\": {\n      \"source\": \"mobile-app\"\n    }\n  }\n}"
        }
      },
      "response": []
    },
    {
      "name": "Publish Event",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Producer-Domain",
            "value": "demo"
          },
          {
            "key": "X-Event-Version",
            "value": "v1"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/events/CustomerUpdated",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "events",
            "CustomerUpdated"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"eventId\": \"{{eventId}}\",\n  \"occurredAt\": \"{{timestamp}}\",\n  \"schemaVersion\": \"v1\",\n  \"data\": {\n    \"customerId\": \"12345\",\n    \"status\": \"ACTIVE\"\n  }\n}"
        }
      },
      "response": []
    },
    {
      "name": "Get Schema Metadata",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/schemas/demo/CustomerUpdated/v1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "schemas",
            "demo",
            "CustomerUpdated",
            "v1"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "eventId",
      "value": "{{randomUUID}}"
    },
    {
      "key": "timestamp",
      "value": "{{isoTimestamp}}"
    }
  ]
}
